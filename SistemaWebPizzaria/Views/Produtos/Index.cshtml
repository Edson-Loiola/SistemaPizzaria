
@model IEnumerable<SistemaWebPizzaria.Produto>

@{ViewData["Title"] = "Produtos";}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <form method="get" action="#">
        <div class="col-md-10 input-group-lg">
            <input class="form-control" type="search" placeholder="Buscar produto">
        </div>
        <div class="col-md-2">
            <button class="btn btn-info btn-block btn-lg" type="submit">Buscar</button>
        </div>
    </form>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <a asp-action="Produto" class="btn btn-primary btn-lg">Cadatrar Produto</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="table-bordered">
        <table class="table table-striped table-hover" border="1" style="border-color:#9a9a9a">
            <thead>
                <tr class="bg-warning">
                    <th>
                        <label class="control-label text-center">Nome da Despesa</label>
                    </th>
                    <th>
                        <label class="control-label">Valor (R$)</label>
                    </th>
                    <th>
                        <label class="control-label">Descrição</label>
                    </th>
                    <th>
                        <label class="control-label">Data</label>
                    </th>
                    <th>
                        <label class="control-label">Ações</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Itemproduto)
                        </td>
                        <td>
                            @*<a asp-action="Edit" class="btn btn-default btn-sm" asp-route-id="@item.IdDespesa">Editar</a>*@
                            @*<a asp-action="DeleteDespesa" class="btn btn-default btn-sm" asp-route-id="@item.IdDespesa">Deletar</a>*@ @*quando for clicado, vai acionar o metodo delete no controlador*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
</div>
