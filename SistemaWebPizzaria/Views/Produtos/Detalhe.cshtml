@model SistemaWebPizzaria.Models.Produtoestoque

@{ViewData["Title"] = "Detalhes do Produto";}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <hr />
    <div class="col-md-12">
        <form method="post" asp-action="Update">
            <div class="row" style="margin-bottom:15px;">
                <div class="col-md-1">
                    <label for="firstName">ID</label>
                    <input asp-for="IdProduto" class="form-control" placeholder="" readonly>
                </div>
                <div class="col-md-11">
                    <label for="firstName">Nome do Produto</label>
                    <input asp-for="Nome" class="form-control" placeholder="">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="row" style="margin-bottom:15px;">
                <div class="col-md-2">
                    <label for="">Valor Compra</label>
                    <input asp-for="PrecoCompra" class="form-control" placeholder="R$">
                    <span asp-validation-for="PrecoCompra" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <label for="">Valor Venda</label>
                    <input asp-for="PrecoVenda" class="form-control" placeholder="R$">
                    <span asp-validation-for="PrecoVenda" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <label for="">Quantidade</label>
                    <input asp-for="Quantidade" type="number" class="form-control " min="0">
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <label for="">Tipo</label>
                    <select asp-for="UnidadeMedida" class="custom-select form-control">
                        <option value="UN">Unidade</option>
                        <option value="KL">Kilograma</option>
                        <option value="GM">grama</option>
                        <option value="LT">Litro</option>
                        <option value="ML">Mililitro</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="">Data de Compra</label>
                    <input asp-for="DataCompra" type="date" class="form-control">
                    <span asp-validation-for="DataCompra" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <label for="">Data de Validade</label>
                    <input asp-for="Validade" type="date" class="form-control">
                    <span asp-validation-for="Validade" class="text-danger"></span>
                </div>

            </div>
            <div class="row" style="margin-bottom:15px;">

                <div class="col-md-3">
                    <label for="">Marca</label>
                    <input asp-for="Marca" type="text" class="form-control">
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label for="firstName">Nome do Fornecedor</label>
                    <input asp-for="NomeFornecedor" class="form-control">
                    <span asp-validation-for="NomeFornecedor" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label for="firstName">Categoria</label>
                    <select asp-for="Categoria" class="custom-select form-control">
                        <option value="bebida">Bebida</option>
                        @*<option value="limpeza">Limpeza</option>*@
                        <option value="Produto Pizza">Ingrediente Pizza</option>
                    </select>
                </div>

                <div class="col-md-2">
                    @*<input id="produtoVenda" asp-for="Vende" type="checkbox" value="" style="margin-top:30px; margin-right:5px;">*@
                    <label>Produto para venda?</label>
                    <select asp-for="Vende" class="custom-select form-control">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>

            </div>
            <div class="row" style="margin-bottom:15px;">
                <div class="col-md-12">
                    <label for="firstName">Campo para descrição</label>
                    <textarea asp-for="Descricao" class="form-control " placeholder="Máximo 500 caracteres" aria-label="With textarea"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <input class="btn btn-success btn-lg" type="submit" value="Atualizar produto" />
                    <a asp-action="Index" class="btn btn-danger btn-lg">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@*para halidtar validação por meio do JavaScript*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}