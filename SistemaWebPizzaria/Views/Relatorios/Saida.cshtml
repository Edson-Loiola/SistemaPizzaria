
@model SistemaWebPizzaria.Models.ViewModels.RelatoriosViewModel

<div class="container-fluid">

    <h2>Saídas</h2>
    <hr />
    <div class="row col-md-12">

        <div class="col-sm-2 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li class="active"><a asp-action="../Relatorios/Entrada">Entradas <span class="sr-only">(current)</span></a></li>
                <li><a asp-action="../Relatorios/Saida">Saídas</a></li>
                <li><a asp-action="../Relatorios/Ganho">Ganhos</a></li>
                <li> <a asp-action="../Home/MenuSistema">Home</a></li>
            </ul>
        </div>

        <div class="col-sm-6 col-sm-offset-3 col-md-9 col-md-offset-0">
            <form class="form-horizontal col-md-offset-2" asp-action="Saida">
                <fieldset>
                    <div class="col-md-4">
                        <label>Data Início</label>
                        <input type="date" name="minDate" class="form-control" value=@ViewData["minDate"] />
                    </div>
                    <div class=" col-md-4">
                        <label>Data Fim</label>
                        <input type="date" name="maxDate" class="form-control" value=@ViewData["maxDate"] />
                    </div>
                    <div class="col-md-4">
                        <br />
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>
                </fieldset>
            </form><br />
                   <div class="img-rounded col-md-12 text-center" style="box-shadow: #505050 0px 1px 5px; background-color: #ff6666">
                       <br />
                       <span style="color:#424242; font-family:Verdana; font-size:medium">Valor de saída com despesas</span>
                       <h1 style="color:#424242; font-family:Impact">R$ @((Model.Despesas.Sum(d => d.Valor) + Model.Produtoestoque.Sum(x => x.PrecoCompra)).ToString("F2"))</h1>
                       <br />
                   </div>

        </div>
    </div>

    <div class="col-sm-6 col-sm-offset-3 col-md-9 col-md-offset-2">
        <br />
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="">
                    <th>
                        <label class="control-label text-center">Nome da Despesa</label>
                    </th>
                    <th>
                        <label class="control-label">Valor (R$)</label>
                    </th>
                    <th>
                        <label class="control-label">Descrição</label>
                    </th>
                    <th>
                        <label class="control-label">Data</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Despesas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeDespesa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataDespesa)
                        </td>
                    </tr>
                }

                @foreach (var item in Model.Produtoestoque)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoCompra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCompra)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>




