
@model Double


<div class="container-fluid">
    <div class="row col-md-12">

        <div class="col-sm-2 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li class="active"><a asp-action="../Relatorios/Entrada">Entradas <span class="sr-only">(current)</span></a></li>
                <li><a asp-action="../Relatorios/Saida">Saídas</a></li>
                <li><a asp-action="../Relatorios/Ganho">Ganhos</a></li>
                <li> <a asp-action="../Home/MenuSistema">Home</a></li>
            </ul>

        </div>

        <div class="col-sm-offset-3 col-md-8 col-md-offset-2 main">
            <form class="form-horizontal" asp-action="Saida">
                <fieldset>
                    <div class="form-group col-md-3">
                        <label for="minDate" class="col-lg-3 control-label">Data Início</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="form-group col-md-3">
                        <label for="maxDate" class="col-md-6 control-label">Data Fim</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <div class="form-group col-md-3">                        
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>

        <div class="col-sm-6 col-sm-offset-3 col-md-7 col-md-offset-2 main">
            <h1 class="">Total de Saídas</h1>
            <div class="row text-center">
                <div class="img-rounded row col-md-12" style="box-shadow: #808080 0px 1px 5px; background-color: #ff6666">
                    <br />
                    <h1 class="" style="color:#424242; font-family:Impact">R$   @Model.ToString()</h1><br /><br />
                </div>
            </div>
        </div>

    </div>
</div>



