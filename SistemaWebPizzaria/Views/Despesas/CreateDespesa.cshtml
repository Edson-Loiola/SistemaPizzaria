
@model SistemaWebPizzaria.Models.Despesa
@*  com essa declaração minha viewm tem um objeto Seller a disposição  *@




<meta http-equiv="Content-Language" content="pt-br">

@{
    ViewData["Title"] = "Cadastar Despesas";
}

<div class="container">

    <h2>@ViewData["Title"]</h2>


    <hr />

    <br />

    @*  esse div row ocupa a largura da rela  *@
    <div class="img-rounded row col-md-12" style="box-shadow: #808080 0px 1px 5px">
        <br /><br />
        @* md-4 ocupa um 1/4 da tela *@

        <form asp-action="Create">


            <div class="form-group col-md-5">
                @*  o compilador consegue entender que o "Name" é um atributo do objeto Seller *@
                <label class="control-label">Nome da Despesa</label>
                <input asp-for="NomeDespesa" class="form-control" />

                @*mostra a mensagem de erro caso o campo fique em branco *@
                <span asp-validation-for="NomeDespesa" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3 body-content=pt-br ">
                @*  o compilador consegue entender que o "Email" é um atributo do objeto Seller *@
                <label class="control-label">Valor</label>
                <input asp-for="Valor" class="form-control" />


                @*mostra a mensagem de erro caso o campo fique em branco *@
                <span asp-validation-for="Valor" class="text-danger"></span>

            </div>

            <div class="form-group col-md-3">
                <label class="control-label">Data</label>
                <input asp-for="DataDespesa" type="date" class="form-control" />
                <span asp-validation-for="DataDespesa" class="text-danger"></span>
            </div>

            <div class="form-group col-md-11">
                <label class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>               
            </div>

            <div class="form-group col-md-12" br>
                <br />
                <input type="submit" value="Inserir" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
                <a asp-action="DespesaSalario" class="btn btn-primary col-md-offset-8">Despesa Sálario</a>
                <br /><br /><br /><br />
            </div>
        </form>
    </div>

</div>


@*para halidtar validação por meio do JavaScript*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
