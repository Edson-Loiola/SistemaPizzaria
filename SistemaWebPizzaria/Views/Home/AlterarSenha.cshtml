
@model SistemaWebPizzaria.Models.Login;

@{ViewData["Title"] = "Alterar Senha";}

<h2 style="text-align : center">@ViewData["Title"]</h2>

<div class="col-md-12">

    <div class="row">
        <div class="col-md-12 text-center">

            <form class="form-signin" asp-action="Edit">
                <div class="col-md-4 col-md-offset-4">
                    <input type="password" class="form-control" placeholder="SenhaAtual" style="margin:2px auto" />
                    <label for="inputPassword" class="sr-only">Senha Atual</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Nova Senha" />
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Confirmar Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>

                    <button class="btn btn-lg btn-block" type="submit" style="margin:20px auto; background-color:#FF1E19; color:white;">Alterar Senha</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*para halidtar validação por meio do JavaScript*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}