
@model SistemaWebPizzaria.Models.ViewModels.LoginModel;

@{ViewData["Title"] = "Confirmar Email";}



@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor



<!--<h2 style="text-align : center">//ViewData["Title"]</h2>-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function ($) {
        $('#menu').hide();
    });
</script>
<div class="col-md-12">

    <div class="row">
        <div class="col-md-12 text-center">

            <form id="form" class="form-signin" asp-action="ConfirmaEmail">
                <div class="col-md-4 col-md-offset-4">
                    <label asp-for="Email" class="text-center">Digite seu Email</label>
                    <input asp-for="Email" type="email" id="Email" class="form-control" placeholder="Email" style="margin:2px auto" />

                    <span asp-validation-for="Email" id="msgEmail" class="text-danger"></span>
                    <span class="text-danger">@TempData["ErroEmail"]</span><br />


                    <button class="btn btn-lg btn-block" type="submit" style="margin:20px auto; background-color:#FF1E19; color:white;">Confirmar Email</button>



                </div>
            </form>
        </div>
    </div>
</div>


@*para halidtar validação por meio do JavaScript*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


