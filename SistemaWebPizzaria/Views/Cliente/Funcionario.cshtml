

<div class="container">

    <h4 class="mb-3"> Insira os dados do Funcionário </h4>
    <hr />

    <div class="row col-md-12">
        <form method="get" action="#">
            <div class="col-md-3">
                <input class="form-control" type="search" placeholder="Buscar...">
            </div>
            <div class="col-md-1">
                <button class="btn btn-info" type="submit">Ok</button>
            </div>
        </form>
    </div><br /><br />  <hr />

    <form method="post" action="#">
        <div class="row col-md-12">

            <div class="col-md-2">
                <label control-label" for="prependedtext">Telefone</label>
                <div class="input-group">
                    <input id="prependedtext" name="prependedtext" class="form-control" placeholder="XX XXXXX-XXXX">
                </div>
            </div>

            <div class="col-md-6">
                <label for="firstName">Nome</label>
                <input type="text" class="form-control" id="firstName" placeholder="" value="">
            </div>
        </div>


        <div class="row col-md-12">
            <br />

            <div class="col-md-4">
                <label for="Rua">Rua</label>
                <input type="text" class="form-control" id="rua" placeholder="" value="">
            </div>



            <div class="col-md-1">
                <label for="firstName">Nº</label>
                <input type="text" class="form-control" id="firstName" placeholder="" value="">

            </div>


            <div class="col-md-3 mb-3">
                <label for="firstName">Complemento</label>
                <input type="text" class="form-control" id="firstName" placeholder="" value="">

            </div>
        </div>

        <div class="row col-md-12">
            <br />

            <div class="col-md-2">
                <label for="Cidade">Cidade</label>
                <input type="text" class="form-control" id="cidade" placeholder="" value="">
            </div>


            <div class="col-md-3">
                <label for="Bairro">Bairro</label>
                <input type="text" class="form-control" id="bairro" placeholder="" value="">
            </div>

            <div class="col-md-2">
                <label for="CEP">CEP</label>
                <input type="text" class="form-control" id="cep" placeholder="" onblur="pesquisacep(this.value);">
            </div>

            <div class="col-md-2">
                <label for="Estado">Estado</label><br />
                <select class="custom-select" id="uf">
                    <option value="">SP</option>
                    <option>SP</option>
                    <option>MG</option>
                    <option>RJ</option>
                    <option>PR</option>
                    <option>SC</option>
                </select>
            </div>
        </div>

        <div class="col-md-12">
            <br />
            <div class="col-md-2">
                <label for="firstName">Sálario</label>
                <input type="text" class="form-control" id="firstName" placeholder="R$" value="">
            </div>

            <div class="col-md-3">
                <label for="firstName">Função</label>
                <input type="text" class="form-control" id="firstName" placeholder="" value="">
            </div>

        </div>
    </form>

    <div class="row col-md-12">
        <br /><br />
        <button class="btn btn-primary btn-lg" type="submit">Confirmar</button>
        <button class="btn btn-danger btn-lg" type="submit">Excluir</button>
    </div>
</div>